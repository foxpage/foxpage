{
  "compilerOptions": {
    // editor
    "charset": "utf-8",
    "newLine": "LF",
    // syntax
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es7",
      "esnext"
    ],
    "jsx": "react",
    // compile
    "rootDirs": [
      "."
    ],
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    // "declaration": true,
    "removeComments": false,
    "sourceMap": false,
    "allowJs": true,
    "locale": "zh-cn",
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@/types/*": [
        "typings/*"
      ],
      "@/apis/*": [
        "src/events/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/constant/*": [
        "src/constant/*"
      ],
      "@/context/*": [
        "src/context/*"
      ],
      "@/dnd/*": [
        "src/dnd/*"
      ],
      "@/editor/*": [
        "src/editor/*"
      ],
      "@/i18n/*": [
        "src/i18n/*"
      ],
      "@/mock/*": [
        "src/mock/*"
      ],
      "@/sidebar/*": [
        "src/sidebar/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/viewer/*": [
        "src/viewer/*"
      ]
    }
  },
  "include": [
    "typings/*",
    "typings/**/*",
    "src/*",
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
